<h1 class = "text-center mt-4">Add a new category</h1>
<div class="container">
        <%= render "shared/errors", obj: @category %>
    
    <div class="row justify-content-center shadow rounded bg-info p-3">
        
        <%= form_with(model: @category, data: { turbo: false }, local: true ) do |f|%>
            <div class="form-group row">
                <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %>
                <div class= "col-10">
                    <%= f.text_field :name, class:"form-control shadow rounded", placeholder: "Enter a name"  %>
                </div>
            </div>

            <div class="form-group row pt-3 justify-content-center">
                
                <div class="col-2">
                    <%= f.submit("Create category", class: "btn btn-outline-light btn-lg")%>
                </div>
                
            </div>

        <% end %>
        
        
        
    </div>
    <div class="row pt-3">
        <%= link_to 'Cancel', categories_path, class: "text-center text-info"%>
    </div>
</div>