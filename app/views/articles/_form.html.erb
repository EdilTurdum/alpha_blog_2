<div class="container">
        <%= render "shared/errors", obj: @article %>
    
    <div class="row justify-content-center shadow rounded bg-info p-3">
        
        <%= form_with(model: @article, data: { turbo: false }, local: true ) do |f|%>
            <div class="form-group row">
                <%= f.label :title, class: "col-2 col-form-label text-light" %>
                <div class= "col-10">
                    <%= f.text_field :title, class:"form-control shadow rounded", placeholder: "Title of article"  %>
                </div>
            </div>

            <div class="form-group row pt-3">
                <%= f.label :description, class: "col-2 col-form-label text-light" %>
                <div class= "col-10">
                    <%= f.text_area :description, rows:10, class:"form-control shadow rounded", placeholder:"Description of article" %>
                </div>
            </div>
            <div class="form-group row pt-3">
                <%= f.label :category, class: "col-2 col-form-label text-light" %>
                <div class= "col-10">
                    <%= f.collection_select(:category_ids, Category.all, :id, :name, {prompt: "Select a Category (or leave blank)"}, 
                        {multiple: true, class:"form-select  shadow rounded"}) %>
                </div>
            </div>
            <div class="form-group row pt-3">
                <div class = "col col-2"></div>
                <div class = "col">
                    <%= f.submit class: "btn btn-outline-light btn-lg"%>
                </div>
                
            </div>

        <% end %>
        
        
        
    </div>
    <div class="row pt-3">
        <%= link_to '[ Cancel and Return to all articles ]', articles_path, class: "text-center text-info"%>
    </div>
</div>